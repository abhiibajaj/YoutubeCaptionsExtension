{
  "name": "Youtube Caption Searcher",
  "version": "1.0.0",
  "description": "Search youtube videos based on their content",
  "permissions": ["storage", "declarativeContent", "tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_title": "This extension lets you search inside youtube videos.",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icons8-youtube-16.png",
      "32": "images/icons8-youtube-32.png",
      "48": "images/icons8-youtube-48.png",
      "128": "images/icons8-youtube-128.png"
    }
  },
  "icons": {
    "16": "images/icons8-youtube-16.png",
    "32": "images/icons8-youtube-32.png",
    "48": "images/icons8-youtube-48.png",
    "128": "images/icons8-youtube-128.png"
  },
  "manifest_version": 2
}
